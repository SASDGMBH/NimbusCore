# NimbusCore Environment Configuration
# 🌍 Server Configuration
PORT=3000  # Der Port, auf dem der Server läuft

# 🗄️ Database Configuration (optional, für zukünftige Nutzung)
DB_HOST=localhost    # Datenbank-Host
DB_PORT=5432        # Standard PostgreSQL-Port
DB_USER=nimbuscore  # Benutzername für die Datenbank
DB_PASSWORD=securepassword  # Sicheres Passwort
DB_NAME=nimbuscore_db  # Name der Datenbank

# 📝 Logging Configuration
LOG_LEVEL=info  # Mögliche Werte: debug, info, warn, error, fatal

# 🔐 Security Configuration
JWT_SECRET=your_secret_key_here  # Geheimer Schlüssel für JWT-Authentifizierung
